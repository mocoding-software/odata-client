{
  "compilerOptions": {
    "experimentalDecorators": true,
    "module": "esnext",
    "target": "ES6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "declaration": true,
    "declarationDir": "./types",
    "outDir": "dist",
    "strictNullChecks": true,
    "removeComments": true,
    "baseUrl": "./src",
    "strict": true,
    "lib": ["es6", "dom"],
    "types": ["node", "jest"]    
  },
  "include": ["src/**/*.ts", "test/**/*.ts"],
  "exclude": ["node_modules", "examples"]
}
